{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "neural_network": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "layers": {
          "type": "object",
          "properties": {
            "n_in": {
              "type": "integer"
            },
            "n_hidden1": {
              "type": "integer"
            },
            "n_hidden2": {
              "type": "integer"
            },
            "n_hidden3": {
              "type": "integer"
            },
            "n_out": {
              "type": "integer"
            }
          },
          "required": [
            "n_in",
            "n_hidden1",
            "n_hidden2",
            "n_hidden3",
            "n_out"
          ]
        },
        "learning_rate": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "layers",
        "learning_rate"
      ]
    },
    "batch_size": {
      "type": "integer"
    },
    "epoch": {
      "type": "integer"
    },
    "samples": {
      "type": "integer"
    },
    "test_dataset_size": {
      "type": "number"
    }
  },
  "required": [
    "neural_network",
    "batch_size",
    "epoch",
    "samples",
    "test_dataset_size"
  ]
}